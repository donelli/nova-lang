			"name": "keyword.recital"
		},
		"keywords-control": {
			"match": "(?i)\\b(case|do|else|elseif|endcase|enddo|endif|exit|for|if|not|and|or|loop|next|otherwise|return|run|while)\\b",
			"name": "keyword.control.recital"
		},
		"functions-builtin": {
			"match": "(?i)\\b(space|empty|date|reverse|afill|int)\\b",
			"name": "support.function.recital"
		},
		"comments": {
			"begin": "^[ \\t]*\\*",
			"end": "\n",
			"name": "comment.line.recital"
		},
		"function-declaration": {
			"begin": "(?i)^(function|procedure)\\s+(\\w+)",
			"end": "\n",
			"beginCaptures": {
				"1": {
					"name": "keyword.control.function.recital"
				},
				"2": {
					"name": "entity.name.function.recital"
				}
			}
		},
		"string-double": {
			"begin": "\"",
			"end": "\"",
			"name": "string.quoted.double.recital",
			"patterns": [
				{
					"include": "#invalid_chars"
				}
			]
		},
		"string-single": {
			"begin": "'",
			"end": "'",
			"name": "string.quoted.single.recital",
			"patterns": [
				{
					"include": "#invalid_chars"
				}
			]
		},
		"string-square-bracket": {
			"begin": "(?<!\\w)\\[",
			"end": "\\]",
			"name": "string.quoted.square-bracket.recital",
			"patterns": [
				{
					"include": "#invalid_chars"
				}
			]
		},
		"invalid_chars": {
			"match": "[\\u00C0-\\u024F\\u1E00-\\u1EFF]+",
			"name": "invalid.illegal.recital"
		},
		"literal-date": {
			"match": "\\{[\\d\\/]*\\}",
			"name": "constant.language.date.recital"
		},
		"literal-bool": {
			"match": "(?i)\\.(t|f)\\.",
			"name": "constant.language.date.recital"
		},
		"literal-number": {
			"match": "(?<!\\w)\\d+(\\.\\d*|)(?!\\w)",
			"name": "constant.numeric.recital"
		}
	}
}